#!/bin/sh

resolution=$(xdpyinfo | awk '/dimensions/ {print $2}')

if [ "$1" ]; then
	filename="$1"
else
	filename=~/Videos/Recordings/$(date).mp4
fi

ps -C dwm && dwmc run_command setstatus 7 "^c#ea6962^ ï¥‰ REC  "

recordscreen() {
	ffmpeg \
		-video_size "$resolution" \
		-framerate 35 \
		-f x11grab \
		-i :0.0 \
		-pix_fmt yuv420p \
		-c:v libx264 \
		-preset ultrafast \
		-y \
		-v error \
		-stats \
		"$filename"
}

recordselection() {

	read -r X Y W H <<EOF
$(slop -f '%x %y %w %h')
EOF

	width=${#W}

	if [ $width -gt 0 ]; then
		ffmpeg \
			-f x11grab -s "$W"x"$H" \
			-framerate 60 \
			-thread_queue_size 512 \
			-i $DISPLAY.0+$X,$Y \
			-vcodec libx264 \
			-qp 18 \
			-preset ultrafast \
			-y \
			-v error \
			-stats \
			~/Videos/Recordings/"$(date)".mp4
	fi

}

case $1 in
  "-s")
    recordselection
    ;;
  "")
    recordscreen
    ;;
  *)
    echo "rec [-s|--selection]"
esac

ps -C dwm && dwmc run_command setstatus 7 " "
